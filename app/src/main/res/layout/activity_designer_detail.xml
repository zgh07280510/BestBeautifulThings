<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="360dp">

                <RelativeLayout
                    android:id="@+id/rl_designer"
                    android:layout_width="wrap_content"
                    android:layout_height="340dp">




                    <android.support.v4.view.ViewPager
                        android:id="@+id/designer_information_viewPager"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#eedd" />
                    <Button
                        android:id="@+id/btn_designer_information_back"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="@dimen/rb_marginbottom"
                        android:layout_marginTop="@dimen/rb_marginbottom"
                        android:background="@mipmap/abc_ic_ab_back_mtrl_am_alpha" />
                </RelativeLayout>

                <cn.carbs.android.avatarimageview.library.AvatarImageView
                    android:id="@+id/iv_designer_head"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true" />
            </RelativeLayout>

            <TextView

                android:id="@+id/tv_designer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/rb_marginbottom"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/tv_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/five_dp"
                android:gravity="center"
                android:textSize="@dimen/ten_sp"/>

            <TextView
                android:id="@+id/tv_concept"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/rb_marginbottom"
                android:gravity="center"
                android:layout_marginRight="@dimen/twenty_dp"
                android:layout_marginLeft="@dimen/twenty_dp"/>

            <Button
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:layout_gravity="center_horizontal"
                android:background="@android:color/black"
                android:text="@string/attention"
                android:textColor="@android:color/white"
                android:layout_marginTop="@dimen/rb_marginbottom"/>

            <TextView
                android:id="@+id/tv_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:layout_marginLeft="@dimen/five_dp"
                android:layout_marginRight="@dimen/five_dp"
                android:layout_marginTop="@dimen/five_dp"
                android:paddingTop="@dimen/rb_marginbottom"/>
            <android.support.design.widget.TabLayout
                  android:background="@android:color/black"
                android:id="@+id/works_tabLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                app:tabTextColor="@android:color/white"/>
            <android.support.v4.view.ViewPager
                android:id="@+id/introduce_viewPager"
                android:layout_width="match_parent"
                android:layout_height="2000dp"
             />

            <!--app:tabSelectedTextColor="@android:color/white"-->
            <!--app:tabIndicatorColor="@android:color/white"-->
        </LinearLayout>
    </ScrollView>
</LinearLayout>