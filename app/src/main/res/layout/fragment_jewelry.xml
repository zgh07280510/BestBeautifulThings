<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#000000">
    <RelativeLayout
        android:id="@+id/jewelry_relayout"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal"
        android:background="@drawable/shap_discover">
        <TextView
            android:id="@+id/jewelry_popu_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全部"
            android:layout_marginLeft="10dp"
            android:textColor="#ffffff"
            android:layout_centerVertical="true"/>
        <ImageView
            android:id="@+id/jewelry_drop_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_whiteback_normal"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            />


    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/fragment_jewelry_recyler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>