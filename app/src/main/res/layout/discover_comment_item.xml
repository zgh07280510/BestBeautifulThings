<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="#ffffff">
    <com.lanou.bestbeautifulthings.util.XCRoundImageView
        android:id="@+id/comment_item_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@mipmap/fffffff"
        android:layout_marginLeft="15dp"/>
    <TextView
        android:id="@+id/comment_item_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/comment_item_icon"
        android:layout_marginLeft="12dp"
        android:textColor="#000000"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/comment_item_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_below="@+id/comment_item_name_tv"
        android:textColor="#000000"
        android:layout_toRightOf="@+id/comment_item_icon"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/comment_item_time"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"/>


</RelativeLayout>